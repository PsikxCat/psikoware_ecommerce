datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

type CartProductType {
  id String
  unitPrice Float
  name String
  category String
  // inStock Int
  quantity Int
  // brand String
  // color String
  // colorCode String
  // capacity String?
  selectedImg String
}

type Address {
  name String
  addressLine1 String
  addressLine2 String?
  city String
  country String
  postalCode String
}

model User {
  id              String  @id @default(auto()) @map("_id") @db.ObjectId
  name            String?
  email           String?  @unique
  emailVerified   DateTime?
  hashedPassword  String?
  image           String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  role            Role @default(USER)

  orders Order[]
}

model Order {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @db.ObjectId
  amount Float
  currency String
  status String
  deliveryStatus String
  createDateTime DateTime @default(now())
  paymentId String @unique
  products CartProductType[]
  address Address?
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum Role {
  USER
  ADMIN
}

